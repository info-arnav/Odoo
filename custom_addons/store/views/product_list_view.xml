<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_store_product_list_kanban" model="ir.ui.view">
        <field name="name">store.product.list.kanban</field>
        <field name="model">store.product.list</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view" string="Student Progress">
                <templates>
                   <t t-name="kanban-box">
                       <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                           <div class="o_kanban_content">
                               <strong>
                                   <div class="oe_kanban_title" style="font-size:24px">
                                       <field name="name"/>
                                   </div>
                               </strong>
                               <br />
                               <div>Quantity: <field name="quantity"/></div>
                               <div>ID: <field name="customer_id"/></div>
                           </div>
                       </div>
                   </t>
               </templates>
            </kanban>
        </field>
    </record>

    <record id="view_store_product_list_list" model="ir.ui.view">
        <field name="name">store.product.list.list</field>
        <field name="model">store.product.list</field>
        <field name="arch" type="xml">
            <list string="Product List">
                <field name="name"/>
                <field name="quantity" />
                <field name="customer_id"/>
            </list>
        </field>
    </record>

    <record id="view_store_product_list_form" model="ir.ui.view">
        <field name="name">store.product.list.form</field>
        <field name="model">store.product.list</field>
        <field name="arch" type="xml">
            <form string="Product Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quantity" />
                        <field name="customer_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_store_product_list" model="ir.actions.act_window">

        <field name="name">Product</field>
        <field name="res_model">store.product.list</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Products.
            </p>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_store_product_activity" model="ir.ui.view">
       <field name="name">store.product.activity</field>
       <field name="model">store.product</field>
       <field name="arch" type="xml">
           <activity string="All Events">
               <templates>
                   <div t-name="activity-box">
                       <div>
                           <field name="name" string="Product Name" class="o_text_block o_text_bold"/>
                           <field name="price"/>
                       </div>
                   </div>
               </templates>
           </activity>
       </field>
    </record>


    <record id="view_store_product_list" model="ir.ui.view">
        <field name="name">store.product.list</field>
        <field name="model">store.product</field>
        <field name="arch" type="xml">
            <list string="Product List">
                <field name="reference" readonly="True"/>
                <field name="name"/>
                <field name="description"/>
                <field name="price" />
                <field name="tag_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_store_product_form" model="ir.ui.view">
        <field name="name">store.product.form</field>
        <field name="model">store.product</field>
        <field name="arch" type="xml">
            <form string="Product Form">
                <sheet>
                    <group>
                        <field name="reference" readonly="True"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="price" />
                        <field name="tag_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_store_product" model="ir.actions.act_window">

        <field name="name">Product</field>
        <field name="res_model">store.product</field>
        <field name="view_mode">list,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Products.
            </p>
        </field>
    </record>

</odoo>
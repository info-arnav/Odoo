<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_store_tag_list" model="ir.ui.view">
        <field name="name">store.tag.list</field>
        <field name="model">store.tag</field>
        <field name="arch" type="xml">
            <list string="Tag List" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_store_tag_form" model="ir.ui.view">
        <field name="name">store.tag.form</field>
        <field name="model">store.tag</field>
        <field name="arch" type="xml">
            <form string="Tag Form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_store_tag" model="ir.actions.act_window">

        <field name="name">Tag</field>
        <field name="res_model">store.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Tags.
            </p>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_school_student_list" model="ir.ui.view">
        <field name="name">school.student.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list string="Student List">
                <field name="name"/>
                <field name="date_of_birth"/>
            </list>
        </field>
    </record>

    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_of_birth"/>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user" />
                        <field name="message_ids" />
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_student" model="ir.actions.act_window">

        <field name="name">Student</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids"
                   eval="[Command.clear(),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('view_school_student_list')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_school_student_form')}),
                          ]" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new student.
            </p>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_school_readonly_student_list" model="ir.ui.view">
        <field name="name">school.student.readonly.list</field>
        <field name="model">school.student</field>
<!--        <field name="priority">10</field>-->
        <field name="arch" type="xml">
            <list string="Student List" create="0" delete="0">
                <field name="name"/>
                <field name="date_of_birth"/>
            </list>
        </field>
    </record>

    <record id="action_school_readonly_student" model="ir.actions.act_window">

        <field name="name">View Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list</field>
        <field name="view_ids"
                   eval="[Command.clear(),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('view_school_readonly_student_list')}),
                          ]" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                View students.
            </p>
        </field>
    </record>

</odoo>
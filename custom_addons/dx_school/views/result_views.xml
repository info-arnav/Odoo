<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_school_result_list" model="ir.ui.view">
        <field name="name">school.result.list</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <list string="Result List">
                <field name="reference" readonly="True"/>
                <field name="name"/>
                <field name="result"/>
            </list>
        </field>
    </record>

    <record id="view_school_result_form" model="ir.ui.view">
        <field name="name">school.result.form</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <form string="Result Form">
                <sheet>
                    <group>
                        <field name="reference" readonly="True"/>
                        <field name="name"/>
                        <field name="result"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_result" model="ir.actions.act_window">

        <field name="name">Result</field>
        <field name="res_model">school.result</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Update Result.
            </p>
        </field>
    </record>

</odoo>